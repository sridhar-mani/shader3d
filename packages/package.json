{
    "name": "shader3d",
    "version": "0.1.0",
    "private": true,
    "description": "Shader3D - The Progressive Graphics Programming Library",
    "type": "module",
    "workspaces": ["packages/*"],
    "scripts": {
        "build": "pnpm -r build",
        "dev": "pnpm -r --parallel dev",
        "test": "pnpm -r test",
        "lint": "pnpm -r lint",
        "clean": "pnpm -r clean",
        "typecheck": "pnpm -r exec tsc --noEmit",
        "publish-packages": "pnpm -r publish --access public"
    },
    "keywords": [
        "shader",
        "webgpu",
        "wgsl",
        "glsl",
        "graphics",
        "3d",
        "dsl",
        "transpiler"
    ],
    "author": "Shader3D Team",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/shader3d/shader3d.git"
    },
    "bugs": {
        "url": "https://github.com/shader3d/shader3d/issues"
    },
    "homepage": "https://shader3d.dev",
    "devDependencies": {
        "@types/node": "^20.10.0",
        "eslint": "^8.55.0",
        "prettier": "^3.1.0",
        "rimraf": "^5.0.0",
        "typescript": "^5.3.0",
        "vitest": "^1.0.0"
    },
    "engines": {
        "node": ">=18.0.0",
        "pnpm": ">=8.0.0"
    },
    "packageManager": "pnpm@8.11.0"
}
