{
    "name": "@shader3d/vite-plugin",
    "version": "0.1.0",
    "description": "Vite plugin for Shader3D with HMR support",
    "type": "module",
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        }
    },
    "files": ["dist", "src"],
    "scripts": {
        "build": "tsc",
        "dev": "tsc --watch",
        "test": "vitest",
        "lint": "eslint src --ext .ts",
        "clean": "rimraf dist"
    },
    "keywords": ["shader", "webgpu", "vite", "vite-plugin", "hmr", "graphics"],
    "author": "Shader3D Team",
    "license": "SEE LICENSE IN ../../LICENSE",
    "repository": {
        "type": "git",
        "url": "https://github.com/shader3d/shader3d.git",
        "directory": "packages/vite-plugin"
    },
    "dependencies": {
        "@shader3d/core": "*"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "rimraf": "^5.0.0",
        "vite": "^5.0.0",
        "vitest": "^1.0.0"
    },
    "peerDependencies": {
        "vite": ">=5.0.0"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
