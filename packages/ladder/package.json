{
    "name": "@shader3d/ladder",
    "version": "0.4.0",
    "description": "Progressive learning system for Shader3D",
    "type": "module",
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "bin": {
        "shader3d": "./dist/cli.js"
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        },
        "./cli": {
            "types": "./dist/cli.d.ts",
            "import": "./dist/cli.js"
        }
    },
    "files": [
        "dist",
        "src"
    ],
    "scripts": {
        "build": "tsc",
        "dev": "tsc --watch",
        "lint": "eslint src --ext .ts",
        "clean": "rimraf dist"
    },
    "keywords": [
        "shader",
        "webgpu",
        "learning",
        "cli",
        "scaffolding",
        "graphics"
    ],
    "author": "Shader3D Team",
    "license": "SEE LICENSE IN ../../LICENSE",
    "repository": {
        "type": "git",
        "url": "https://github.com/shader3d/shader3d.git",
        "directory": "packages/ladder"
    },
    "bugs": {
        "url": "https://github.com/shader3d/shader3d/issues"
    },
    "homepage": "https://shader3d.dev",
    "dependencies": {
        "@shader3d/core": "*",
        "@shader3d/runtime": "*"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "@typescript-eslint/eslint-plugin": "^8.0.0",
        "@typescript-eslint/parser": "^8.0.0",
        "chokidar": "^3.5.0",
        "eslint": "^9.0.0",
        "rimraf": "^5.0.0",
        "typescript-eslint": "^8.0.0",
        "vitest": "^1.0.0"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
