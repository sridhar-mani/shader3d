{
    "name": "@shader3d/core",
    "version": "0.1.0",
    "description": "Core transpiler and code generation for Shader3D DSL",
    "type": "module",
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        },
        "./ast": {
            "types": "./dist/ast.d.ts",
            "import": "./dist/ast.js"
        },
        "./parser": {
            "types": "./dist/parser.d.ts",
            "import": "./dist/parser.js"
        }
    },
    "files": ["dist", "src"],
    "scripts": {
        "build": "tsc",
        "dev": "tsc --watch",
        "test": "vitest",
        "lint": "eslint src --ext .ts",
        "clean": "rimraf dist"
    },
    "keywords": [
        "shader",
        "webgpu",
        "wgsl",
        "glsl",
        "graphics",
        "transpiler",
        "dsl"
    ],
    "author": "Shader3D Team",
    "license": "SEE LICENSE IN ../../LICENSE",
    "repository": {
        "type": "git",
        "url": "https://github.com/shader3d/shader3d.git",
        "directory": "packages/core"
    },
    "bugs": {
        "url": "https://github.com/shader3d/shader3d/issues"
    },
    "homepage": "https://shader3d.dev",
    "dependencies": {
        "typescript": "^5.3.0"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "rimraf": "^5.0.0",
        "vitest": "^1.0.0"
    },
    "peerDependencies": {
        "typescript": ">=5.0.0"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
